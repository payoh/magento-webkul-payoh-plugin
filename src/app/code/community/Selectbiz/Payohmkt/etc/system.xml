<config>
	<sections>
		<selectbiz_payoh>
            <groups>
            	<payohmkt translate="label" module="payohmkt">
            		<label>Payoh Marketplace configuration</label>
   					<frontend_type>text</frontend_type>
					<comment></comment>
   					<sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>	                 
	                     <autocommission translate="label comment" >
	                     	<label>Auto commission</label>
	                     	<comment><![CDATA[If <b>No</b> <u>you must fill field Commission amount below</u>.]]></comment>
	                        <frontend_type>select</frontend_type>
	                        <source_model>adminhtml/system_config_source_yesno</source_model>
	                        <sort_order>30</sort_order>
	                        <show_in_default>1</show_in_default>
	                        <show_in_website>1</show_in_website>
	                        <show_in_store>1</show_in_store>
	                     </autocommission>
	                      <commission_amount translate="label">
	                     	<label>Commission amount</label>
	                        <frontend_type>text</frontend_type>
	                        <sort_order>40</sort_order>
	                        <show_in_default>1</show_in_default>
	                        <show_in_website>1</show_in_website>
	                        <show_in_store>1</show_in_store>
	                     </commission_amount>
	                      <create_wallet translate="label">
	                     	<label>Automatic wallet creation</label>
	                        <frontend_type>select</frontend_type>
	                        <source_model>adminhtml/system_config_source_yesno</source_model>
	                        <sort_order>60</sort_order>
	                        <show_in_default>1</show_in_default>
	                        <show_in_website>1</show_in_website>
	                        <show_in_store>1</show_in_store>
	                     </create_wallet>	  
	                     <include_shipping translate="label comment">
	                     	<label>Shipping amount in marketplace total</label>
	                     	<comment><![CDATA[If you have cutomized marketplace module to include shipping amount in seller's amount, enable it.]]></comment>
	                        <frontend_type>select</frontend_type>
	                        <source_model>adminhtml/system_config_source_yesno</source_model>
	                        <sort_order>70</sort_order>
	                        <show_in_default>1</show_in_default>
	                        <show_in_website>1</show_in_website>
	                        <show_in_store>1</show_in_store>
	                     </include_shipping>	   
	                     <!--  <dispatch_payment translate="label">
	                     	<label>Automatic dispatch payments</label>
	                        <frontend_type>select</frontend_type>
	                        <source_model>adminhtml/system_config_source_yesno</source_model>
	                        <sort_order>40</sort_order>
	                        <show_in_default>1</show_in_default>
	                        <show_in_website>1</show_in_website>
	                        <show_in_store>1</show_in_store>
	                     </dispatch_payment>	     -->	                 
                      </fields> 
             	</payohmkt>
             </groups>
		</selectbiz_payoh>
	</sections>
</config>